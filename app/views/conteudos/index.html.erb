<p id="notice"><%= notice %></p>

<h1>Listing Conteudos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Subtitulo</th>
      <th>Imagem</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conteudos.each do |conteudo| %>
      <tr>
        <td><%= conteudo.titulo %></td>
        <td><%= conteudo.subtitulo %></td>
        <td><%= image_tag conteudo.image.url(:thumb) %></td>
        <td><%= conteudo.texto %></td>
        <td><%= link_to 'Show', conteudo %></td>
        <td><%= link_to 'Edit', edit_conteudo_path(conteudo) %></td>
        <td><%= link_to 'Destroy', conteudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

