  <% if @sugestao.errors.any? %>
    <div id="error_explanation">
      Há erros no formulário, por favor verifique.
    </div>
  <% end %>
  <%= form_for(@sugestao) do |f| %>
    <div class="form-group">
      <%= f.label :nome, class: 'estilo-fonte' %><br>
      <%= f.text_field :nome, class: 'form-control' %>
      <%= error_tag @sugestao, :nome %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'estilo-fonte' %><br>
      <%= f.text_field :email, class: 'form-control' %>
      <%= error_tag @sugestao, :email %>
    </div>
    <div class="form-group">
      <%= f.label :telefone, class: 'estilo-fonte' %><br>
      <%= f.text_field :telefone, class: 'form-control' %>
      <%= error_tag @sugestao, :telefone %>
    </div>
    <div class="form-group">
      <%= f.label :texto, class: 'estilo-fonte' %><br>
      <%= f.text_area :texto, class: 'form-control' %>
      <%= error_tag @sugestao, :texto %>
    </div>
    <div class="form-group">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  <% end %>
