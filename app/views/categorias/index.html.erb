<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Listing Categorias</div>
  <div class="panel-body">
    <div class="table responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="mdl-data-table__cell--non-numeric">Nome</th>
            <th class="mdl-data-table__cell--non-numeric">Ação</th>
          </tr>
        </thead>

        <tbody>
          <% @categorias.each do |categoria| %>
          <tr>
            <td class="mdl-data-table__cell--non-numeric"><%= categoria.nome %></td>
            <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Edit', edit_categoria_path(categoria), class: 'btn btn-success' %></td>
            <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Destroy', categoria, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= link_to 'New Categoria', new_categoria_path, class: 'btn btn-info' %>
