<p id="notice"><%= notice %></p>

<h4>Listing Categorias</h4>

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp tam-tb">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Nome</th>
      <th class="mdl-data-table__cell--non-numeric">Ação</th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= categoria.nome %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Edit', edit_categoria_path(categoria), class: 'mdl-button mdl-js-button mdl-button--primary' %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Destroy', categoria, class: 'mdl-button mdl-js-button mdl-button--accent', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Categoria', new_categoria_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect dist-bt' %>
