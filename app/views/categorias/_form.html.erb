  <% if @categoria.errors.any? %>
    <div id="error_explanation">
      Há erros no formulário, por favor verifique.
    </div>
  <% end %>

  <%= form_for(@categoria) do |f| %>
    <div class="field">
      <%= f.text_field :nome, class: 'mdl-textfield__input', placeholder: 'Nome' %>
      <%= error_tag @categoria, :nome %>
    </div>
    <br>
    <%= f.submit :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
    <%= link_to 'Back', categorias_path, class: 'mdl-button mdl-js-button mdl-button--primary' %>
  <% end %>
