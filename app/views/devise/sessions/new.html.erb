  <div class="demo-card-image mdl-card mdl-shadow--2dp" style="margin: 0 auto;">
      <div class="mdl-card__title mdl-card--expand">
        <h3>Log in</h3>
      </div>
      <div class="mdl-card__actions">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.email_field :email, class: 'mdl-textfield__input', autofocus: true, placeholder: 'Email' %>
          </div>

          <div class="mdl-textfield mdl-js-textfield">
            <%= f.password_field :password, class: 'mdl-textfield__input', placeholder: 'Senha' %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <div class="dist-bt">
            <%= f.submit "Log in", :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
  </div>
