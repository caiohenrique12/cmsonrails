  <div class="panel panel-default" style="margin: 0 auto; width: 400px; height: 360px;">
      <div class="panel-heading">
        Log in
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email, class: 'estilo-fonte' %>
            <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'estilo-fonte' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Senha' %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <div class="form-group">
            <%= f.submit "Log in", :class => 'btn btn-info btn-lg btn-block' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
  </div>
